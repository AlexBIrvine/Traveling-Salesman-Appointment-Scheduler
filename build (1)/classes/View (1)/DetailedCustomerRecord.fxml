<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="475.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ViewControllers.DetailedCustomerRecordController">
   <children>
      <VBox alignment="CENTER" prefHeight="105.0" prefWidth="600.0">
         <children>
            <Label text="Edit Customer Record">
               <font>
                  <Font name="Arial Bold" size="46.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox layoutY="145.0" prefHeight="274.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Customer Name" />
                  <TextField fx:id="nameField">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Address" />
                  <TextField fx:id="addressField">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Address2" />
                  <TextField fx:id="address2Field">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="City" />
                  <TextField fx:id="cityField">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Postal Code" />
                  <TextField fx:id="postalCodeField">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Country" />
                  <TextField fx:id="countryField">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Phone Number" />
                  <TextField fx:id="phoneField">
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutY="439.0" prefHeight="82.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#CancelButtonPressed" text="Cancel" />
                  <Button mnemonicParsing="false" onAction="#SaveButtonPressed" text="Save Changes">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
