<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="307.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewControllers.LogInController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Scheduler App Login">
         <font>
            <Font name="System Bold" size="29.0" />
         </font>
      </Label>
      <VBox layoutY="53.0" prefHeight="147.0" prefWidth="307.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="usernameLabel" text="Username" />
                  <TextField fx:id="userNameField" prefHeight="25.0" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="passwordLabel" text="Password" />
                  <TextField fx:id="passwordField" prefHeight="25.0" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label fx:id="countryDisplayLabel" text="Current Country:">
                           <font>
                              <Font name="Cambria Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="countryLabel" text="Label" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#loginButtonPressed" text="Login" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
